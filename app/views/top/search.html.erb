<h1>Potepan Shareでまだ体験したことのない旅をしよう</h1>

<div class="search_form">
    <%= form_with url: search_rooms_path, local: true, method: :get do |f| %>
        <%= f.text_field :area, placeholder: "エリア名を入力" %>
        <%= f.submit "検索" %>
    <% end %>
</div>

<h2>おすすめのエリア</h2>

<%= link_to "東京", search_rooms_path(area:"東京") %>
<%= link_to "大阪", search_rooms_path(area:"大阪") %>
<%= link_to "京都", search_rooms_path(area:"京都") %>
<%= link_to "札幌", search_rooms_path(area:"札幌") %>
