<%= form_for current_user, url: {action: 'profile_update'} do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
        <%= f.label :profile %><br />
        <%= f.text_area :profile, autofocus: true %>
    </div>
    
    <div class="actions">
      <%= f.submit "Update" %>
    </div>
   <% end %>
