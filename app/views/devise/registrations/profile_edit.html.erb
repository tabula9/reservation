<h2 class="setting">設定</h2>

<div class="between">
    <%= render "shared/partial" %>
    <div class="wid">
        <div class="bottom_line">
            <h2>プロフィール</h2>
        </div>

      <%= form_for current_user, url: {action: 'profile_update'} do |f| %>
        <div class="field">
          <%= f.label :image, "アイコン画像" %>
          <% if current_user.image? %>
            <%= image_tag current_user.image.url, :size => '100x100' %>
          <% else %>
            <%= image_tag "/assets/default.png", :size => '100x100' %>
          <% end %>
          <%= f.file_field :image %>
        </div>

        <div class="field">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, placeholder: "名前を入力" %>
        </div>

        <div class="field">
            <%= f.label :profile, "自己紹介" %>
            <%= f.text_area :profile, placeholder: "自己紹介を入力", autofocus: true %>
        </div>
          
        <div class="actions">
          <%= link_to "キャンセル", :back, class: "btn" %>
          <%= f.submit "保存", class: "orange_btn user_btn white" %>
        </div>
      <% end %>

  </div>
</div>
