<h2>設定</h2>

<div class="between">
    <%= render "shared/partial" %>
    <div class="wid">
        <div class="between">
            <h2>プロフィール</h2>
        </div>

      <%= form_for current_user, url: {action: 'profile_update'} do |f| %>
        <div class="field">
          <%= f.label :image, "アイコン画像" %><br>
          <% if current_user.image? %>
            <%= image_tag current_user.image.url, :size => '100x100' %>
          <% else %>
            <%= image_tag "/assets/default.png", :size => '100x100' %>
          <% end %>
          <%= f.file_field :image %>
        </div>

        <div class="field">
          <%= f.label :name, "名前" %><br>
          <%= f.text_field :name %>
        </div>

        <div class="field">
            <%= f.label :profile, "自己紹介" %><br>
            <%= f.text_area :profile, autofocus: true %>
        </div>
          
        <div class="actions">
          <%= f.submit "保存" %>
        </div>
        <%= link_to "キャンセル", :back %>
      <% end %>

  </div>
</div>
