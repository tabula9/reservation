<%= stylesheet_link_tag 'devise', :media => "all" %>

<div class="form_container">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, placeholder: "ユーザー名を入力", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, placeholder: "メールアドレスを入力", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, placeholder: "パスワードを入力", autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, placeholder: "確認用パスワードを入力", autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新しいアカウントを作成", class: "orange_btn white form_btn" %>
    </div>
  <% end %>

  <%= link_to "アカウントをお持ちの方はログイン",new_user_session_path, class: "btn" %>
</div>
