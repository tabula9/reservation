<%= stylesheet_link_tag 'user', :media => "all" %>

<h2 class="setting">設定</h2>

<div class="between">
    <%= render "shared/partial" %>

    <div class="wid">
        <div class="between bottom_line">
            <h2>プロフィール</h2>
            <%= link_to "編集", profile_edit_path %>
        </div>

        <table>
            <tr>
                <th>アイコン画像</th>
                <td>
                    <% if @user.image? %>
                        <img src=<%= @user.image %> class = "icon_image">
                    <% else %>
                        <img src="/assets/default.png">
                    <% end %>
                </td>
            </tr>
            <tr>
                <th>名前</th>
                <td><%= @user.name %></td>
            </tr>
            <tr>
                <th>自己紹介</th>
                <td><%= @user.profile %></td>
            </tr>
        </table>
    </div>
</div>
