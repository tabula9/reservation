<h2>新規登録</h2>

<%= render "shared/error", obj: @room %>
 
 <%= form_with model: @room do |f| %>
   <table>
     <tr>
       <th><%= f.label :name ,"施設名" %></th>
       <td><%= f.text_field :name %></td>
     </tr>
 
     <tr>
       <th><%= f.label :introduction ,"施設詳細" %></th>
       <td><%= f.text_area :introduction %></td>
     </tr>
 
     <tr>
       <th><%= f.label :price ,"料金" %></th>
       <td><%= f.text_field :price %></td>
     </tr>
 
     <tr>
       <th><%= f.label :address ,"住所" %></th>
       <td><%= f.text_field :address %></td>
     </tr>

     <tr>
       <th><%= f.label :image ,"施設画像" %></th>
       <td><%= f.file_field :image %></td>
     </tr>
   </table>
   <%= f.hidden_field :user_id, value: current_user.id %>

   <div>
     <ul>
       <li><%= f.submit "保存"%></li>
       <li><%= link_to "キャンセル", :rooms %></li>
     </ul>
   </div>
 <% end %>
